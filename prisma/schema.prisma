// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Visitor {
  id          String   @id @default(cuid())
  ip          String
  city        String?
  region      String?
  country     String?
  countryCode String?
  timezone    String?
  latitude    Float?
  longitude   Float?
  org         String?
  userAgent   String?
  createdAt   DateTime @default(now())

  @@index([createdAt])
  @@index([country])
}

model Submission {
  id          String   @id @default(cuid())
  name        String
  phone       String
  ip          String?
  city        String?
  region      String?
  country     String?
  countryCode String?
  timezone    String?
  latitude    Float?
  longitude   Float?
  org         String?
  createdAt   DateTime @default(now())

  @@index([createdAt])
  @@index([country])
  @@index([name])
}
